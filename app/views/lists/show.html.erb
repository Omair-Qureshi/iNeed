Details of <%= @list.user.first_name %>'s list
<div data-controller="toggle-items">
<ul>
  <% @list.items.each do |item| %>
    <%= turbo_frame_tag dom_id(item) do %>
      <li class="d-flex align-content-center">
        <%= link_to item_path(item, item: { completed: !item.completed }), data: { turbo_method: :patch }, style: 'display: block; background: gray; border-radius: 30px; height: 1.5rem; width: 1.5rem;' do %>
          <% if item.completed %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="color: black; height: 100%; width: 100%;">
              <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% end %>
        <span data-toggle-items-target="item"> <%= item.name %>: <%= item.description %> <%= item.completed ? 'Completed' : 'Pending' %> </span>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "back to lists", lists_path %>
</div>
