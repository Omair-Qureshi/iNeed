<div class="container d-flex justify-content-evenly">
  <div class="your-list">
    <h2>Your list</h2>
    <ul>
      <% @user_list.items.each do |item| %>
        <li><%= item.name %>: <%= item.description %>

        <%= link_to item_path(item), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>

        <% end %>
        </li>
      <% end %>
    </ul>

    <h3>Add item to your own list</h3>
    <%= simple_form_for [@user_list, @item] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.button :submit %>
    <% end %>
  </div>

  <div class="friends-lists">
    <h2>Your friend's lists</h2>
    <ul>
      <% @lists.each do |list| %>
        <% if list.user.id != current_user.id %>
          <li> <%= link_to list.user.first_name, list_path(list) %>'s List</li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
