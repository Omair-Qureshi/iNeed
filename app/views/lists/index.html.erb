<div class="container d-flex justify-content-evenly">
  <div class="your-list">
    <h2>Your list</h2>
    <ul>
      <% @user_list.items.each do |item| %>
      <li><%= item.name %>: <%= item.description %></li>
      <% end %>
      </ul>
    <p><%= link_to "Add items to your own list", new_list_item_path(@user_list) %></p>

  </div>
  <div class="friends-lists">
    <h2>Your friend's lists</h2>
    <ul>
      <% @lists.each do |list| %>
        <% if list.user.id != current_user.id %>
          <li> <%= link_to list.user.first_name, list_path(list) %>'s List</li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
