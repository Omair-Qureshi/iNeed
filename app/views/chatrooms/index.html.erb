<h1>Chatrooms</h1>
<%= current_user %>
<ul>
  <% @chatrooms.each do |chatroom| %>
  <% chatroom.messages.each do |message| %>
    <%= message.user.first_name %>
    <% end %>
    <li><%= link_to chatroom.name, chatroom_path(chatroom) %></li>
  <% end %>
</ul>
<%= link_to "Create Chatroom", new_chatroom_path %>
